@model DeleteModalViewModel

<!-- Modal -->
<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Request for delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete '@Model.ItemName'?
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="@Model.ContorollerName" asp-route-id="@Model.ItemId">Delete</a>
            </div>
        </div>
    </div>
</div>