@using FitnessBuddy.Web.ViewModels.Exercises
@model ExerciseTrainingInputModel

@{
    this.ViewData["Title"] = "Exercise details";
}

<div class="container-fluid">
    <div class="row shadow-lg">
        <div class="col-md-2 alert-secondary text-center font-weight-bold">
            <form asp-controller="Exercises" asp-action="AddToTraining">
                <div class="form-grup">
                    <label asp-for="Sets"></label>
                    <input asp-for="Sets" class="form-control" placeholder="Food name..." />
                    <span asp-validation-for="Sets" class="text-danger"></span>
                </div>
                <div class="form-grup">
                    <label asp-for="Repetitions"></label>
                    <input asp-for="Repetitions" class="form-control" placeholder="Food name..." />
                    <span asp-validation-for="Repetitions" class="text-danger"></span>
                </div>
                <div class="form-grup">
                    <label asp-for="Weight"></label>
                    <input asp-for="Weight" class="form-control" placeholder="Food name..." />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <vc:trainings-select user-id="@Model.UserId"></vc:trainings-select>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-grup" style="margin-top: 2%;">
                    <input type="submit" class="btn btn-outline-secondary" value="Add" />
                </div>
            </form>
        </div>

        <div class="col-md-10 bg-light">
            <div class="text-center">
                <h2 style="font-style: oblique;">
                    @Model.Name
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p class="img" ">
                        <img src="@Model.ImageUrl" class="img-fluid" alt="Responsive image" />
                    </p>
                </div>
                <div class="col-md-6">
                    <p class="item-description">
                        <strong>Muscle group: </strong>@Model.CategoryName
                    </p>
                    <p class="item-description">
                        <strong>Equipment: </strong>@Model.EquipmentName
                    </p>
                    <p class="item-description">
                        <strong>Difficulty: </strong>@Model.Difficulty
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="col-md-6">
                    <p class="item-description">
                        <strong>Instructions: </strong>@Model.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>