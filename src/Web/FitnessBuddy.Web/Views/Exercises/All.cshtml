@using FitnessBuddy.Web.ViewModels.Exercises
@model AllExercisesViewModel

@{
    this.ViewData["Title"] = "All exercise";
}

<div class="text-center">
    <h2 style="font-style: oblique;">
        All Exercises
    </h2>
</div>

<div class="row justify-content-center" style="margin-bottom: 1%">
    <form class="form-inline col-lg-6 offset-lg-3" asp-action="All" asp-controller="Exercises">
        <input class="form-control mr-sm-2" type="search" placeholder="Name or Category" aria-label="Search" name="search">
        <input type="hidden" name="id" value="1" />
        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>

<hr />

@if (Model.Exercises.Any() == false)
{
    <h3 class="text-center">No exercises found!</h3>
}

<div class="container-fluid">
    <div class="row">
        @foreach (var exercise in Model.Exercises)
        {
            <div class="card col-md-3 offset-1 mb-4 shadow bg-info">
                <a asp-action="AddToTraining" asp-controller="Exercises" asp-route-exerciseId="@exercise.Id">
                    <h3 class="card-header text-white">@exercise.Name</h3>
                    <img src="@exercise.ImageUrl" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item li-bg-color">Difficulty: @exercise.Difficulty</li>
                        <li class="list-group-item li-bg-color">Category: @exercise.CategoryName</li>
                        <li class="list-group-item li-bg-color">Equipment: @exercise.EquipmentName</li>
                    </ul>
                </a>
            </div>
        }
    </div>
</div>
<partial name="_PagingPartial" model="@Model" />