@model FoodInputModel

@{
    this.ViewData["Title"] = "Add new food";
}

<div class="text-center">
    <h1>
        Add Food
    </h1>

    <form asp-controller="Foods" asp-action="Add" class="col-lg-6 offset-lg-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-grup">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Food name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-grup">
            <label asp-for="ProteinIn100Grams"></label>
            <input asp-for="ProteinIn100Grams" class="form-control"  placeholder="Protein for 100 grams..."/>
            <span asp-validation-for="ProteinIn100Grams" class="text-danger"></span>
        </div>
        <div class="form-grup">
            <label asp-for="CarbohydratesIn100Grams"></label>
            <input asp-for="CarbohydratesIn100Grams" class="form-control"  placeholder="Carbohydrates for 100 grams..."/>
            <span asp-validation-for="CarbohydratesIn100Grams" class="text-danger"></span>
        </div>
        <div class="form-grup">
            <label asp-for="FatIn100Grams"></label>
            <input asp-for="FatIn100Grams" class="form-control"  placeholder="Fat for 100 grams..."/>
            <span asp-validation-for="FatIn100Grams" class="text-danger"></span>
        </div>
        <div class="form-grup">
            <label asp-for="Sodium"></label>
            <input asp-for="Sodium" class="form-control"  placeholder="Sodium for 100 grams..."/>
            <span asp-validation-for="Sodium" class="text-danger"></span>
        </div>
        <div class="form-grup">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control"  placeholder="Image URL..."/>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-grup" style="margin-top: 2%;">
            <input type="submit" class="btn btn-outline-dark" value="Add" />
        </div>
    </form>
</div>

