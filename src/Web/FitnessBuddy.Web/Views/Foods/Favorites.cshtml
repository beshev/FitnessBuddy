@using FitnessBuddy.Web.Infrastructure.Extensions
@model IEnumerable<FoodViewModel>

@{
    this.ViewData["Title"] = "My favorite foods";
}

<h1 class="text-center">
    Favorite foods
</h1>

@if (Model.Count() == 0)
{
    <h4 class="text-center">
        You don't have any favorite foods!
    </h4>
}

<div class="container">
    <div class="row">
        @foreach (var food in @Model)
        {
            <div class="card col-6 col-sm-5 col-md-3 col-lg-3 flex relative">
                <partial name="_FoodPartial" model="food" />
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">
                        <a class="btn btn-dark" asp-action="RemoveFromFavorite" asp-controller="Foods" asp-route-foodId="@food.Id">
                            Remove
                        </a>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>



