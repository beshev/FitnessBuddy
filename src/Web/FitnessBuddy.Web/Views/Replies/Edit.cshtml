@model ReplyEditInputModel

@{
    this.ViewData["Title"] = "Edit reply";
}

<h5 class="text-center">
    Edit your reply
</h5>

<form asp-action="Edit" asp-controller="Replies" class="col-lg-6 offset-lg-3">
    <div class="form-group">
        <textarea asp-for="Description" class="form-control" rows="15"></textarea>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Edit" class="btn btn-outline-info"/>
    </div>
</form>